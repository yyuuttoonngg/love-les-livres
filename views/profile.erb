<div class="user-profile">
    <h1>user's profile</h1>

    <div class = "bio">
        <p>Name: <%=@user.name%></p>
        <p>Location: <%=@user.location%></p>
        <p>Interets: <%=@interets.join(",")%></p>
    </div>

    <div class="friendship">
        <%if @friendship_type =="favorite"%>
            <p> on favorite list</p>
            <a href="/unblock/<%=@user.id%>">unfavorite</a>
            <a href="/block/<%=@user.id%>">block</a>
        <%elsif @friendship_type == "block"%>
            <p>you have blocked this user, do you wish to <a href="/unblock/<%=@user.id%>">unblock</a>
            ?</p>
        <%elsif @friendship_type == ""%>
            <a href="/favorite/<%=@user.id%>">add to favorite</a>
            <a href="/block/<%=@user.id%>">block user</a>
        <%end%>

    </div>

    <%if @friendship_type !="block"%>
    <div class ="reading_status">
        <p>books <%=@user.name%> has read </p>
        <%@friend_read_books.each do |book|%>
        <p><img src="<%=book.small_image_url%>" alt=""></p>
        <p><%=book.title%></p>
        <%end%>
    </div>
    <div class ="chat">
        <a href="/recommend/<%=@user.name%>">recommend book</a>
        <a href="/message/<%=@user.name%>">send message</a>
    </div>
    <%end%>
</div>